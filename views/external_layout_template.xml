<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="Reports Assets Inherited" inherit_id="web.report_assets_common">
			<xpath expr="." position="inside">
				<link rel="stylesheet" type="text/less" href="/external_layout_customize/static/src/less/style.less"/>
			</xpath>
		</template>
		
		<template id="web.external_layout_customize" inherit_id="web.external_layout_background">
			<xpath expr="//t-field[@name='company.report_header']" position="replace"/>
			
			<xpath expr="//div[@class='pull-left company_address']" position="replace">
				<span t-field="company.report_header_name" style="font-family:'Prompt', sans-serif; font-size:32px"/>
			</xpath>
			
			<xpath expr="//img[@t-if='company.logo']" position="attributes">
				<attribute name="style">height:45px;</attribute>
			</xpath>
			
			<xpath expr="//div[@class='footer o_background_footer']" position="replace">
				<div class="text-center">
					<ul class="list-inline">
						<li t-if="company.street"><span t-field="company.street"/> | </li>
						<li t-if="company.street2"><span t-field="company.street2"/> | </li>
						<li t-if="company.city"><span t-field="company.city"/> | </li>
						<li t-if="company.state_id"><span t-field="company.state_id"/> <span t-field="company.zip"/> | </li>
						<li t-if="company.country_id"><span t-field="company.country_id"/></li><br/>
						<li t-if="company.phone"><i class="fa fa-phone"/> <span t-field="company.phone"/></li>
						<li t-if="company.email"><i class="fa fa-at"/> <span t-field="company.email"/></li>
						<li t-if="company.website"><i class="fa fa-globe"/> <span t-field="company.website"/></li>
					</ul>
					<div t-field="company.report_footer"/>
					<div class="text-muted">
						Page:
						<span class="page"/>
						of
						<span class="topage"/>
           </div>
				</div>
			</xpath>
		</template>
	</data>
</odoo>
