<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="Reports Assets Inherited" inherit_id="web.report_assets_common">
			<xpath expr="." position="inside">
				<link rel="stylesheet" type="text/less" href="/external_layout_customize/static/src/less/style.less"/>
			</xpath>
		</template>
		
		<template id="web.external_layout_customize" inherit_id="web.external_layout_background">
			<xpath expr="//div[@class='pull-right']" position="replace">
				<div class="pull-right company_address">
					<div>
						<strong style="font-family:'Arimo', sans-serif;font-size:12px; text-align:right;" t-field="company.partner_id.name"/>
					</div>
					<span style="font-family:'Arimo', sans-serif;font-size:12px; text-align:right;" t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
				</div>
			</xpath>
			
			<xpath expr="//div[@class='pull-left company_address']" position="replace">
				<span t-field="company.report_header_name" style="font-family:'Prompt', sans-serif; font-size:38px"/>
			</xpath>
			
			<xpath expr="//img[@t-if='company.logo']" position="attributes">
				<attribute name="style">height:50px;</attribute>
			</xpath>
		</template>
	</data>
</odoo>
